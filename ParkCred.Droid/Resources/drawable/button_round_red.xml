<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/bgr_button_red" />
      <stroke
          android:width="0.2dp"
          android:color="@color/content_gray" />
      <corners
          android:radius="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/bgr_button_red"
          android:endColor="@color/bgr_button_red"
          android:angle="270" />
      <stroke
          android:width="0.2dp"
          android:color="@color/content_gray" />
      <corners
          android:radius="4dp" />
    </shape>
  </item>
</selector>
